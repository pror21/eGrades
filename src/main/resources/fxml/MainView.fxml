            fx:controller="gr.roropoulos.egrades.controller.MainController">
    <center>
        <VBox prefHeight="640.0" prefWidth="940.0">
            <AnchorPane VBox.vgrow="ALWAYS">
                <TabPane layoutX="220.0" layoutY="88.0" prefHeight="375.0" prefWidth="640.0"
                         tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <Tab text="Μαθήματα">
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <TableView fx:id="coursesTableView" prefHeight="466.0" prefWidth="640.0"
                                       tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0"
                                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                       AnchorPane.topAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="idCoursesTableColumn" prefWidth="70.0" text="Κωδ."/>
                                    <TableColumn fx:id="titleCoursesTableColumn" prefWidth="381.99998474121094"
                                                 text="Τίτλος"/>
                                    <TableColumn fx:id="gradeCoursesTableColumn" minWidth="0.0" prefWidth="73.0"
                                                 style="-fx-alignment: center; -fx-font-weight: bold;" text="Βαθμός"/>
                                    <TableColumn fx:id="semesterCoursesTableColumn" prefWidth="67.0"
                                                 style="-fx-alignment: center;" text="Εξάμηνο"/>
                                    <TableColumn fx:id="creditsCoursesTableColumn" prefWidth="37.0"
                                                 style="-fx-alignment: center;" text="ΔΜ"/>
                                    <TableColumn fx:id="hoursCoursesTableColumn" prefWidth="51.0"
                                                 style="-fx-alignment: center;" text="Ώρες"/>
                                    <TableColumn fx:id="ectsCoursesTableColumn" prefWidth="61.0"
                                                 style="-fx-alignment: center;" text="ECTS"/>
                                    <TableColumn fx:id="examDateCoursesTableColumn" prefWidth="139.0"
                                                 style="-fx-alignment: center;" text="Εξεταστική"/>
                                </columns>
                            </TableView>
                        </AnchorPane>
                    </Tab>
                    <Tab text="Τελευταία Δήλωση">
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <TableView fx:id="lastRegTableView" prefHeight="466.0" prefWidth="640.0"
                                       tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0"
                                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                       AnchorPane.topAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="regCourseIdTableColumn" prefWidth="70.0" text="Κωδ."/>
                                    <TableColumn fx:id="regCourseTitleTableColumn" prefWidth="450.0" text="Τίτλος"/>
                                    <TableColumn fx:id="regCourseGradeTableColumn" minWidth="0.0"
                                                 style="-fx-font-weight: bold; -fx-alignment: center;" text="Βαθμός"/>
                                    <TableColumn fx:id="regCourseSemesterTableColumn" prefWidth="78.0"
                                                 style="-fx-alignment: center;" text="Εξάμηνο"/>
                                    <TableColumn fx:id="regCourseCreditsTableColumn" prefWidth="75.0" text="ΔΜ"/>
                                    <TableColumn fx:id="regCourseHoursTableColumn" prefWidth="75.0" text="Ώρες"/>
                                </columns>
                            </TableView>
                        </AnchorPane>
                    </Tab>
                    <Tab text="Πρόσφατες Βαθμολογίες">
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <TableView fx:id="recentTableView" layoutX="220.0" layoutY="73.0" prefHeight="346.0"
                                       prefWidth="640.0" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0"
                                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                       AnchorPane.topAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="recentCourseIdTableColumn" prefWidth="70.0" text="Κωδ."/>
                                    <TableColumn fx:id="recentCourseTitleTableColumn" prefWidth="413.0" text="Τίτλος"/>
                                    <TableColumn fx:id="recentCourseGradeTableColumn" minWidth="0.0" prefWidth="72.0"
                                                 text="Βαθμός"/>
