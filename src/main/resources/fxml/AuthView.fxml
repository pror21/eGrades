<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gr.roropoulos.egrades.controller.AuthController">
    <children>
        <GridPane hgap="14.0" maxHeight="+Infinity" maxWidth="+Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="190.0" prefWidth="450.0" vgap="5.0">
            <children>
                <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true"
                           GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0"
                           GridPane.valignment="TOP">
                    <image>
                        <Image url="@/images/Key_48x48.png"/>
                    </image>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </ImageView>
                <VBox maxHeight="+Infinity" maxWidth="+Infinity" minHeight="-Infinity" prefHeight="139.0"
                      prefWidth="372.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <children>
                        <GridPane prefHeight="23.0" prefWidth="372.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="352.0" minWidth="10.0"
                                                   prefWidth="338.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <HBox prefHeight="100.0" prefWidth="336.0">
                                    <children>
                                        <Label fx:id="messageLabel" text="ΤΑΥΤΟΠΟΙΗΣΗ ΧΡΗΣΤΗ:" textAlignment="LEFT"
                                               wrapText="true">
                                            <font>
                                                <Font name="Open Sans Bold" size="13.0"/>
                                            </font>
                                            <effect>
                                                <Reflection fraction="0.54" topOffset="-7.0"/>
                                            </effect>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </GridPane>
                        <Line endX="250.0" startX="-100.0">
                            <stroke>
                                <LinearGradient endX="1.0" endY="1.0">
                                    <stops>
                                        <Stop color="BLACK"/>
                                        <Stop color="WHITE" offset="1.0"/>
                                    </stops>
                                </LinearGradient>
                            </stroke>
                        </Line>
                        <HBox prefHeight="99.0">
                            <children>
                                <VBox prefHeight="137.0" prefWidth="115.0" spacing="15.0">
                                    <children>
                                        <Label text="Πανεπιστήμιο:"/>
                                        <Label text="Όνομα Χρήστη:"/>
                                        <Label text="Κωδικός Χρήστη:"/>
                                    </children>
                                    <padding>
                                        <Insets top="10.0"/>
                                    </padding>
                                </VBox>
                                <VBox prefHeight="137.0" prefWidth="240.0" spacing="8.0">
                                    <padding>
                                        <Insets top="5.0"/>
                                    </padding>
                                    <children>
                                        <ChoiceBox fx:id="uniChoiceBox" prefHeight="25.0" prefWidth="234.0">
                                            <tooltip>
                                                <Tooltip
                                                        text="Επιλέξτε το πανεπιστήμιο σας. Σε περίπτωση που δεν υπάρχει στη λίστα σημαίνει ότι δεν υποστηρίζεται απο την εφαρμογή προς το παρόν."/>
                                            </tooltip>
                                        </ChoiceBox>
                                        <TextField fx:id="usernameField" maxWidth="-Infinity" minWidth="-Infinity"
                                                   prefHeight="25.0" prefWidth="150.0">
                                            <tooltip>
                                                <Tooltip
                                                        text="Το όνομα χρήστη που χρησιμοποιείτε για την Γραμματεία του Πανεπιστημίου σας."/>
                                            </tooltip>
                                        </TextField>
                                        <PasswordField fx:id="passwordField" maxWidth="-Infinity" prefWidth="150.0">
                                            <tooltip>
                                                <Tooltip
                                                        text="Ο κωδικός που χρησιμοποιείτε για την Γραμματεία του Πανεπιστημίου σας."/>
                                            </tooltip>
                                        </PasswordField>
                                    </children>
                                </VBox>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="CENTER_RIGHT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="29.0"
                      prefWidth="372.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Pane maxWidth="-Infinity" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="cancelButton" cancelButton="true" minWidth="80.0" mnemonicParsing="false"
                                onAction="#handleCancelButtonAction" text="Ακύρωση" HBox.hgrow="NEVER">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Button>
                        <HBox fx:id="okParent" alignment="CENTER" prefHeight="25.0" prefWidth="45.0">
                            <children>
                                <Button fx:id="okButton" defaultButton="true" disable="true" minWidth="80.0"
                                        mnemonicParsing="false" onAction="#handleOkButtonAction" text="Είσοδος"
                                        HBox.hgrow="NEVER">
                                    <HBox.margin>
                                        <Insets left="14.0"/>
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets right="20.0"/>
                    </padding>
                </HBox>
                <ProgressIndicator fx:id="loginProgress" progress="0.0" visible="false" GridPane.rowIndex="1"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="+Infinity" minWidth="-Infinity"/>
            </columnConstraints>
            <padding>
                <Insets bottom="14.0" left="14.0" right="14.0" top="14.0"/>
            </padding>
            <rowConstraints>
                <RowConstraints maxHeight="Infinity" minHeight="-Infinity" prefHeight="132.0" valignment="CENTER"
                                vgrow="ALWAYS"/>
                <RowConstraints maxHeight="135.0" minHeight="-Infinity" prefHeight="32.0" vgrow="NEVER"/>
            </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
